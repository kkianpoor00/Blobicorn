<p id="notice"><%= notice %></p>

<div class="posts">
  <div class="posts-center">
    <h1 class="posts-title h1">Posts</h1>
    <hr>

    <table>
      <thead>
        <tr>
          <th>Service is</th>
          <th>Title</th>
          <th>Category</th>
          <th>Location</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.service.option %></td>
            <td><%= post.title %></td>
            <td><%= post.category.name %></td>
            <td><%= post.location.name %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post %></td>
            <% if signed_in? %>
              <% if (current_user.email == post.email) %>
                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="new-post-btn">
    <% if signed_in? %>
      <%= link_to 'New Post', new_post_path, class: "btn btn-lg btn-primary" %>
    <% else %>
      <%= link_to "New Post", '/sign_in', class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>

<br>
