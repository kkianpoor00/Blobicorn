    <h1>Welcome to the Errand Folks App</h1>

    <h2>
      This is the home page for the the Errand Folks App.
    </h2>

    <%= link_to "Sign up now!", '/sign_up', class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

<div class="bigHeader">

  <div>
    <h1 class="main-motto">Let's Act As A Society</h1>
  </div>

  <div class="searchArea">

    <!-- <select class="categories">
      <option value="all">All</option>
