<div class="create-post">
  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :service , class:"control-label"%>
      <%= form.collection_select :service_id, Service.all, :id, :option , class:"form-control"%>
    </div>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :example %>
      <%= form.collection_select :category_id, Category.all, :id, :name , class:"form-control"%>
    </div>

    <div class="field">
      <%= form.label :Location %>
      <%= form.collection_select :location_id, Location.all, :id, :name , class:"form-control"%>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, :cols => 70, :rows => 20 , class:"form-control"%>
    </div>
    <br>
    <div class="actions">
      <%= form.submit "Create Post" , class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <!-- < %= link_to 'Back', posts_path, class: "btn btn-lg btn-secondary" %> -->
</div>
