<div class="sign-in">

  <div id="clearance" class="password-reset">
    <!-- <h2>< %= t(".title") %></h2> -->
    <h2 class="sign-in-title h2">Reset Your Password</h2>


    <p><%= t(".description") %></p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email', class:"form-control" %>
      </div>

      <div class="submit-field">
        <%= form.submit "Reset Password" , class:"btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
